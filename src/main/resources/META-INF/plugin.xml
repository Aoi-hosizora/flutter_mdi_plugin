<idea-plugin>
    <id>com.aoihosizora.flutter_mdi_plugin</id>
    <name>Flutter MdiIcons Previewer</name>
    <vendor email="a970335605@hotmail.com" url="https://Aoi-hosizora.github.com/">AoiHosizora</vendor>

    <description>
        A IntelliJ Platform Plugin for previewing material_design_icons_flutter icons (MdiIcons) before the code lines and in the code completion suggestion list.
    </description>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Dart</depends>

    <!-- Extension points defined by the plugin -->
    <extensions defaultExtensionNs="com.intellij">
        <annotator language="Dart"
                   implementationClass="com.aoihosizora.flutter_mdi_plugin.FlutterIconAnnotator"/>
    </extensions>

    <extensions defaultExtensionNs="Dart">
        <completionExtension implementation="com.aoihosizora.flutter_mdi_plugin.FlutterIconCompletion"
                             order="last"/>
    </extensions>
</idea-plugin>
